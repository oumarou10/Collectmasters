{% extends 'base.html.twig' %}

{% block main %}

    <div class="container">

        {% for flash in app.session.flashbag.get('info_remove') %}

                    <div class="alert alert-success">
                        {{ flash }}

                    </div>

        {% endfor %}

        {% for item in items %}
            {{ item.title }} | <a href="{{ path('oneItem', {id: item.id}) }}">View</a>
            {% if app.user %}
              |  <a href="{{ path('removeItem', {id: item.id}) }}">Remove</a>
            {% endif %} </br>
        {% endfor %}
    </div>

{% endblock %}